<mujoco model="two_link_arm">
    <compiler angle="degree"/>
    <option gravity="0 0 -9.81"/>

    <default>
        <geom type="capsule" size="0.01" rgba="0.6 0.6 0.6 1"/>
        <joint limited="true"/>
    </default>

    <worldbody>
        <!-- Base: 128mm diameter = 64mm radius -->
        <body name="marker_sphere" pos="0.18 0.12 0.05">  <!-- change pos to your desired xyz -->
                <geom type="sphere" size="0.01" rgba="1 0 0 1"/>
        </body>
        <body name="base" pos="0 0 0">
            <geom type="box" size="0.094 0.094 0.064" rgba="0.3 0.3 0.3 1"/> <!-- Flat cube -->
						<joint name="base_rot" type="hinge" axis="0 0 -1" range="0 360" damping="1"/>
            <!-- Lift: 37.8mm fixed vertical offset -->
            <body name="lift" pos="0 0 0.064">
                <geom fromto="0 0 0 0 0 0.0378"/>

                <!-- Link 1 (150mm), rotates upward in X-Z plane -->
                <body name="link1" pos="0 0 0.0378">
                    <joint name="shoulder" type="hinge" axis="0 -1 0" range="0 180" damping="0.30"/>
                    <geom fromto="0 0 0  0.15 0 0"/>

                    <!-- Link 2 (150mm), rotates upward in X-Z plane from end of link1 -->
                    <body name="link2" pos="0.15 0 0">
                        <joint name="elbow" type="hinge" axis="0 -1 0" range="0 135" damping="0.30"/>
                        <geom fromto="0 0 0  0.15 0 0"/>
                        <site name="end_effector" pos="0.15 0 0"/> 
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <position joint="base_rot" kp="50"/>
        <position joint="shoulder" kp="25"/>
        <position joint="elbow" kp="25"/>
    </actuator>
</mujoco>